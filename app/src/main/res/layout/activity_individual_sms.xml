<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IndividualSMSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:alpha=".93"
        android:background="#d9d9d6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="end"
                android:popupBackground="@android:color/holo_green_dark">

                <Spinner
                    android:id="@+id/spinnerSession"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/spinnerBranch"
                    android:layout_alignBottom="@+id/spinnerBranch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="end"

                >

                <Spinner
                    android:id="@+id/spinnerBranch"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/spinnerBranch"
                    android:layout_alignBottom="@+id/spinnerBranch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="end"

                >

                <Spinner
                    android:id="@+id/spinnerClass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/spinnerBranch"
                    android:layout_alignBottom="@+id/spinnerBranch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="end"

                >

                <Spinner
                    android:id="@+id/spinnerShift"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/spinnerBranch"
                    android:layout_alignBottom="@+id/spinnerBranch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spinnerVilPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="end"

                >

                <Spinner
                    android:id="@+id/spinnerSection"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/spinnerBranch"
                    android:layout_alignBottom="@+id/spinnerBranch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="end"

                >

                <Spinner
                    android:id="@+id/spinnerMessageType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/spinnerBranch"
                    android:layout_alignBottom="@+id/spinnerBranch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/listAllBTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".7"
                android:background="@drawable/rect"
                android:onClick="onClickProfile"
                android:text="All SC"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/unSchedulBTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1.3"
                android:background="@drawable/rect"
                android:onClick="onClickProfile"
                android:text="To Be Scheduled"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/scheduledBTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/rect"
                android:onClick="onClickProfile"
                android:text="Scheduled SC"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/mapBTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".5"
                android:background="@drawable/rect"
                android:onClick="onClickProfile"
                android:text="Map"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containCategoryFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="60">

            <EditText
                android:id="@+id/etmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="160"
                android:gravity="top"
                android:hint="Set Emergency Message"
                android:inputType="textLongMessage|textCapSentences|textMultiLine|textAutoCorrect|textAutoComplete"
                android:maxLines="6"
                android:minLines="3"
                android:scrollbars="vertical" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/choiceSt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/tvRoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="Roll" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone" />
    </LinearLayout>


    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>